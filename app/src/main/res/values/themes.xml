<resources>
<!-- Base application theme. -->
    <style name="Theme.ProjectConsumer" parent="Theme.Material3.DayNight.NoActionBar">
<!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue900</item>
        <item name="colorOnPrimary">@color/white</item>
<!-- Secondary brand color. -->
        <item name="colorSecondary">@color/materialBlack</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/darkWhite</item>
<!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/toolbarBackgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/bottomNavBackgroundColor</item>
        <item name="android:windowLightNavigationBar">true</item>

<!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>

        <item name="mainTextColor">@color/black</item>
        <item name="subTextColor">@color/grey700</item>
        <item name="descriptionTitleTextColor">@color/deep_purple_700</item>

        <item name="mainButtonBackgroundColor">@color/blue500</item>
        <item name="subButtonBackgroundColor">@color/blue200</item>

        <item name="mainBackgroundColor">@color/darkWhite</item>
        <item name="subBackgroundColor">@color/white</item>

        <item name="messageBoxTextColor">@color/white</item>
        <item name="messageBoxBackgroundColor">@color/redLight</item>

        <item name="highlightColor">@color/red500</item>

        <item name="shimmerColor">@color/shimmerLight</item>

        <item name="profileTintColor">@color/profileButtonLight</item>

        <item name="toolbarTintColor">@color/materialBlack</item>
        <item name="toolbarBackButtonColor">#BFFFFFFF</item>
        <item name="toolbarBackgroundColor">@color/darkWhite</item>

        <item name="statusActiveColor">@color/green500</item>
        <item name="statusFinishedColor">@color/blue500</item>
        <item name="statusDroppedColor">@color/red500</item>

        <item name="themeThumbTint">@color/yellow700</item>
        <item name="themeTrackTint">@color/yellow500</item>
        <item name="themeTrackDecorationTint">@color/yellow700</item>

        <item name="levelTrackTint">@color/grey300</item>
        <item name="profileButtonTint">@color/profileButtonLight</item>

        <item name="bottomNavBackgroundColor">@color/white</item>
        <item name="bottomNavSelectedColor">@color/blue700</item>
        <item name="bottomNavUnselectedColor">@color/grey500</item>
        <item name="colorSecondaryContainer">@color/blue700</item>

        <item name="materialAlertDialogTheme">@style/Theme.ProjectConsumer.ErrorMaterialAlertDialog</item>

        <item name="floatingActionButtonSmallStyle">@style/Theme.ProjectConsumer.SmallFAB</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">54dp</item>
        <item name="android:height">26dp</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

<!--   Custom Popup Menu Style   -->
    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>

<!--   BottomSheet Style   -->
    <style name="Theme.ProjectConsumer.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:background">?attr/mainBackgroundColor</item>
    </style>

<!--   Toolbar Style   -->
    <style name="Theme.ProjectConsumer.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">3dp</item>
        <item name="android:textColorPrimary">@color/materialBlack</item>
        <item name="navigationIconTint">@color/materialBlack</item>
        <item name="iconTint">@color/materialBlack</item>
        <item name="colorControlNormal">@color/materialBlack</item>
    </style>

    <style name="Theme.ProjectConsumer.Toolbar.Subtitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">12sp</item>
    </style>

<!--   Material Dialog Style   -->
    <style name="Theme.ProjectConsumer.ErrorMaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">?attr/messageBoxBackgroundColor</item>
        <item name="colorSecondary">?attr/messageBoxBackgroundColor</item>
        <item name="colorSurface">?attr/messageBoxBackgroundColor</item>
        <item name="colorOnSurface">?attr/messageBoxBackgroundColor</item>
        <item name="colorSurfaceContainerHigh">?attr/messageBoxBackgroundColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.Title.ErrorTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.Title.ErrorBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.ErrorButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.ErrorNegativeButton</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.Title.ErrorTitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.Title.ErrorBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.ErrorButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/redDark</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.ErrorNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ProjectConsumer.InfoMaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">?attr/mainBackgroundColor</item>
        <item name="colorSecondary">?attr/mainBackgroundColor</item>
        <item name="colorSurface">?attr/mainBackgroundColor</item>
        <item name="colorOnSurface">?attr/mainBackgroundColor</item>
        <item name="colorSurfaceContainerHigh">?attr/mainBackgroundColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.Title.InfoTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.Title.InfoBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.InfoButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.InfoNegativeButton</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.Title.InfoTitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.Title.InfoBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">?attr/mainTextColor</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.InfoButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue700</item>
    </style>

    <style name="Theme.ProjectConsumer.MaterialAlertDialog.App.InfoNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red700</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.InfoButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.ProjectConsumer.MaterialAlertDialog.App.InfoNegativeButton</item>
    </style>
<!--   FAB Style   -->
    <style name="Theme.ProjectConsumer.SmallFAB" parent="Widget.Material3.FloatingActionButton.Small.Primary">
        <item name="materialThemeOverlay">@style/Theme.ProjectConsumer.FABOverlay</item>
    </style>

    <style name="Theme.ProjectConsumer.FABOverlay" parent="">
        <item name="colorContainer">?attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/mainBackgroundColor</item>
    </style>
</resources>