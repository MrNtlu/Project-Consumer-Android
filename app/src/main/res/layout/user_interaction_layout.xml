<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_48"
        app:layout_constraintBottom_toBottomOf="@+id/bookmarkInteractionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookmarkInteractionButton" />

    <TextView
        android:id="@+id/interactionRateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:textColor="?attr/mainTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:text="8.2" />

    <TextView
        android:id="@+id/interactionsRateCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/mainTextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/interactionRateTV"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:text="| 10123" />

    <ImageButton
        android:id="@+id/bookmarkInteractionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_bookmark"
        app:tint="?attr/mainTextColor"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/watchLaterInteractionButton"
        app:layout_constraintEnd_toStartOf="@+id/watchLaterInteractionButton"
        app:layout_constraintTop_toTopOf="@+id/watchLaterInteractionButton" />

    <ImageButton
        android:id="@+id/watchLaterInteractionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_watchlist"
        app:tint="?attr/mainTextColor"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>